<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/tapestry">



    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:layout_gravity="center"
        android:layout_marginTop="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/dice1"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:background="@drawable/empty_dice"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="332dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/dice4"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dice2"
        android:layout_width="99dp"
        android:layout_height="104dp"
        android:background="@drawable/empty_dice"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="331dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"

        />
    <ImageView
        android:id="@+id/dice3"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:background="@drawable/empty_dice"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="491dp"
        app:layout_constraintTop_toBottomOf="@+id/dice2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/dice4"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:background="@drawable/empty_dice"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="491dp"
        app:layout_constraintTop_toBottomOf="@id/dice1"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>